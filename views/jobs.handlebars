<h1>Jobs:</h1>

<table>
    <thead> 
        <th>Id</th>
        <th>Name</th>
        <th>OOP</th> 
    </thead> 
    <tbody> 
        {{#each job}}
        <tr> 
            <td>{{job_id}}</td>
            <td>{{name}}</td> 
            <td>{{oop}}</td>
            <td><button onclick="deleteJob({{id}})">Delete</button></td>
            <td><a href="/jobs/{{id}}">Update</a></td>
        </tr> 
        {{/each}}
    </tbody> 

    <form id="addJobs" action="/jobs" method="post">
        <h3>Add Jobs</h3>
        <label>
            <span>Name: </span>
            <input id="name" type="text" name="name" placeholder="Job Name" />
        </label>
        <br/><br/>
        <label>
            <span>OOP: </span>
            <input id="oop" type="text" name="oop" placeholder="OOP Amount" />
        </label>        
        </br></br>
        <label> 
            <input type="button" class="button" value="Submit" /> 
        </label>  
    </form>

</table> 
